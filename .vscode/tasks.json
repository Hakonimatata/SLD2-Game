{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I", "src/include",
                "main.cpp", "function.cpp", "Game.cpp", 
                "-o", "${workspaceFolder}/main.exe",
                "-L", "src/lib",
                "-lmingw32", "-lSDL2main", "-lSDL2"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile and link the program to produce main.exe"
        }
    ]
}